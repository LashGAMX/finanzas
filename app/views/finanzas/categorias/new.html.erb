<%= render 'shared/menu' %>
<div class="container" style="margin-left:18%">  
    <div class="row" style="margin-top:5%">
        <div class="col-12"> 
            <%= form_with(model:@categoria ,url: categorias_path) do |form| %>
                <% @categoria.errors.full_messages.each do |error| %>
                    <div><%= error %> <% end %> </div>
                <div class="mb-3">
                    <%= form.label :categoria , :class => 'form-label' %>
                    <%= form.text_field :categoria , :class => 'form-control' %>
                </div>
                <div class="mb-3">
                    <%= form.label :tipo , :class => 'form-label' %>
                    <%= form.select :tipo, [["Ingreso", "1"], ["Egreso", "2"]] , :class => 'form-control' %>
                </div>
                <div class="mb-3">
                <%= form.submit "Crear categoria", :class => "btn btn-success" %>
               </div>
            <% end %>
        </div>
     </div>
</div> 